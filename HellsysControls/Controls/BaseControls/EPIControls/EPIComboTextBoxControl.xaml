<UserControl x:Class="HellsysControls.Controls.BaseControls.EPIControls.EPIComboTextBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HellsysControls.Controls.BaseControls.EPIControls"
             mc:Ignorable="d" >
    <Grid Height="20" Width="120">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>
        <ComboBox Grid.Column="0" Margin="0 0 -0.5 0"/>
        <TextBox Grid.Column="1" Margin="-0.5 0 0 0" VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Right"/>
    </Grid>
</UserControl>
